{
  "compilerOptions": {
    "target": "ES2020", // Modern JS output
    "module": "CommonJS", // Compatible with Node.js
    "outDir": "./dist", // Output directory for compiled JS
    "rootDir": "./", // Your source files root
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Allows default import from CJS
    "skipLibCheck": true, // Speeds up compilation
    "forceConsistentCasingInFileNames": true // Enforces consistent imports
  },
  "include": ["server.ts"], // Add all .ts files you want compiled
  "exclude": ["node_modules"]
}
